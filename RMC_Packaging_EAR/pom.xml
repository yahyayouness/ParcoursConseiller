<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>com.edf.rmc.ear</groupId>
		<artifactId>RMC_EAR</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	<artifactId>RMC_Packaging_EAR</artifactId>
	<packaging>ear</packaging>
	<name>RMC_Packaging_EAR</name>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-ear-plugin</artifactId>
				<configuration>
					<generatedDescriptorLocation>${basedir}/src/main/application/META-INF</generatedDescriptorLocation>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
					</archive>
					<modules>
						<webModule>
							<groupId>com.edf.rmc.war</groupId>
							<artifactId>RMC_Authentification</artifactId>
							<contextRoot>RMC_Authentification</contextRoot>
						</webModule>
						<webModule>
							<groupId>com.edf.rmc.war</groupId>
							<artifactId>RMC_WS</artifactId>
							<contextRoot>RMC_WS</contextRoot>
						</webModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.edf.rmc.war</groupId>
			<artifactId>RMC_WS</artifactId>
			<version>${project.version}</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>com.edf.rmc.war</groupId>
			<artifactId>RMC_WS</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
		<dependency>
		<groupId>com.edf.rmc.war</groupId>
		<artifactId>RMC_Authentification</artifactId>
		<version>0.0.1-SNAPSHOT</version>
		<type>war</type>
		</dependency>
		<dependency>
		<groupId>com.edf.rmc.war</groupId>
		<artifactId>RMC_WS</artifactId>
		<version>${project.version}</version>
		<type>pom</type>
		</dependency>
	</dependencies>
</project>